<?xml version="1.0" encoding="utf-8"?>
<resources>
    <array name="g_default_loading_fg">
        <item>@color/cyan_500</item>
        <item>@color/purple_500</item>
        <item>@color/blue_500</item>
        <item>@color/orange_500</item>
        <item>@color/pink_500</item>
    </array>
    <attr format="reference" name="gLoadingStyle"/>
    <color name="blue_500">#2196F3</color>
    <color name="cyan_500">#00BCD4</color>
    <color name="g_default_loading_bg">#e0e0e0</color>
    <color name="grey_300">#E0E0E0</color>
    <color name="orange_500">#FF9800</color>
    <color name="pink_500">#E91E63</color>
    <color name="purple_500">#9C27B0</color>
    <declare-styleable name="Loading"><attr format="dimension" name="gBackgroundLineSize"/><attr format="dimension" name="gForegroundLineSize"/><attr format="reference|color" name="gBackgroundColor"/><attr format="reference|color" name="gForegroundColor"/><attr name="gLineStyle">
            <enum name="circle" value="1"/>
            <enum name="line" value="2"/>
        </attr><attr format="boolean" name="gAutoRun"/><attr format="float" name="gProgressFloat"/></declare-styleable>
    <declare-styleable name="ProgressWheel"><attr format="boolean" name="matProg_progressIndeterminate"/><attr format="color" name="matProg_barColor"/><attr format="color" name="matProg_rimColor"/><attr format="dimension" name="matProg_rimWidth"/><attr format="float" name="matProg_spinSpeed"/><attr format="integer" name="matProg_barSpinCycleTime"/><attr format="dimension" name="matProg_circleRadius"/><attr format="boolean" name="matProg_fillRadius"/><attr format="dimension" name="matProg_barWidth"/><attr format="boolean" name="matProg_linearProgress"/></declare-styleable>
    <declare-styleable name="SmileyLoadingView"><attr format="integer" name="duration"/><attr format="dimension" name="strokeWidth"/><attr format="color|dimension" name="strokeColor"/><attr format="integer" name="animRepeatCount"/></declare-styleable>
    <declare-styleable name="StateLayout"><attr format="reference" name="errorDrawable"/><attr format="reference" name="emptyDrawable"/><attr format="reference" name="progressView"/></declare-styleable>
    <dimen name="g_loading_lineSize">2dp</dimen>
    <dimen name="g_loading_minSize">28dp</dimen>
    <dimen name="progress_height">35dp</dimen>
    <dimen name="progress_width">35dp</dimen>
    <string name="app_name">StateLayoutlib</string>
    <string name="common_empty_msg">未搜索到，点击屏幕重新尝试</string>
    <string name="common_error_msg">加载失败，点击屏幕重新尝试</string>
    <string name="common_loading_message">正在加载中...</string>
    <string name="common_network_exception">系统繁忙，请稍后再试</string>
    <string name="common_no_network_msg">系统繁忙，请稍后再试</string>
    <style name="Genius.Widget.Loading" parent="">
        <item name="gBackgroundLineSize">@dimen/g_loading_lineSize</item>
        <item name="gForegroundLineSize">@dimen/g_loading_lineSize</item>

        <item name="gBackgroundColor">@color/g_default_loading_bg</item>
        <item name="gForegroundColor">@array/g_default_loading_fg</item>

        <item name="gLineStyle">circle</item>
        <item name="gAutoRun">true</item>
    </style>
</resources>